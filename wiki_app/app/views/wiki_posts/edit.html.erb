<%= render 'shared/logo' %>

<div class="container">
  <h1 style="text-align: center;">Edit Post: <%= @wiki_post.title.titleize %></h1>

  <%= render 'form', wiki_post: @wiki_post %>

  <div style="text-align: center; margin-top: 20px; display: flex; gap: 10px; justify-content: center;">
    <%= link_to "View Post", @wiki_post, class: "button button-secondary" %>
    <%= link_to "Back to Posts", wiki_posts_path, class: "button button-secondary" %>
    <%= button_to "Delete Post", @wiki_post, method: :delete, class: "button button-danger", data: { turbo_confirm: "Are you sure you want to delete this post?" } %>
  </div>
</div>
