<%= render 'shared/logo' %>

<div style="max-width: 600px; margin: 0 auto; padding: 0 20px;">
  
  <h1 style="text-align: center;">Edit Post: <%= @wiki_post.title.titleize %></h1>
  
  <%= form_with model: @wiki_post, local: true do |form| %>
    <div style="margin-bottom: 20px;">
      <%= form.label :title, style: "display: block; margin-bottom: 5px;" %>
      <%= form.text_field :title, style: "width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;" %>
    </div>

    <div style="margin-bottom: 20px;">
      <%= form.label :author, style: "display: block; margin-bottom: 5px;" %>
      <%= form.text_field :author, style: "width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;" %>
    </div>

    <div style="margin-bottom: 20px;">
      <%= form.label :description, style: "display: block; margin-bottom: 5px;" %>
      <%= form.text_area :description, style: "width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;" %>
    </div>

    <div style="display: flex; justify-content: center; margin: 20px 0;">
      <%= form.submit "Update", style: "background-color: #0d6efd; color: white; padding: 10px 20px; border: none; border-radius: 4px; cursor: pointer; font-size: 16px; min-width: 120px;" %>
    </div>
  <% end %>

  <div style="display: flex; justify-content: center; gap: 10px; margin-top: 20px;">
    <%= link_to "View Post", @wiki_post, 
        style: "background-color: #198754; color: white; padding: 8px 16px; border: none; border-radius: 4px; cursor: pointer; text-decoration: none;" %>
    
    <%= link_to "Back to Listing", wiki_posts_path, 
        style: "background-color: #6c757d; color: white; padding: 8px 16px; border: none; border-radius: 4px; cursor: pointer; text-decoration: none;" %>
    
    <%= button_to "Delete Post", @wiki_post, 
        method: :delete, 
        style: "background-color: #dc3545; color: white; padding: 8px 16px; border: none; border-radius: 4px; cursor: pointer;",
        data: { turbo_confirm: "Are you sure you want to delete this post?" } %>
  </div>
</div>
