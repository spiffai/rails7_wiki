<%= render 'shared/logo' %>

<div class="container">
  <% if notice %>
    <div class="notice">
      <%= notice %>
    </div>
  <% end %>

  <article class="post-container">
    <div class="post-main">
      <header class="post-header">
        <h1><%= @wiki_post.title.titleize %></h1>
        <div class="post-meta">
          <span>Created on <%= @wiki_post.created_at.strftime('%B %d %Y %I:%M %p') %></span>
          <span class="mx-10">|</span>
          <span>Written By <%= @wiki_post.author.titleize %></span>
        </div>
      </header>

      <section class="post-description">
        <%= @wiki_post.description %>
      </section>

      <section class="post-content">
        <%= sanitize @wiki_post.body, tags: %w(h1 h2 h3 h4 h5 h6 p br hr ul ol li pre code strong em del table tr td th tbody thead img a), attributes: %w(href src alt title style class) %>
      </section>
    </div>
  </article>

  <div class="flex flex-center gap-10 mt-20">
    <%= link_to "Edit Post", edit_wiki_post_path(@wiki_post), class: "button button-primary" %>
    <%= link_to "Back to Posts", wiki_posts_path, class: "button button-secondary" %>
    <%= button_to "Delete Post", @wiki_post, method: :delete, class: "button button-danger", data: { turbo_confirm: "Are you sure you want to delete this post?" } %>
  </div>
</div>
