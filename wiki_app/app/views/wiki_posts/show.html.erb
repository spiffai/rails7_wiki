<%= render 'shared/logo' %>

<div class="container">
  
  <p class="notice"><%= notice %></p>

  <h1><%= @wiki_post.title.titleize %></h1>
  <div style="display: flex; justify-content: center; gap: 10px; margin-top: 20px;">
    <p >Created on <%= @wiki_post.created_at.strftime('%B %d %Y %I:%M %p') %></p>
    <p> | </p>
    <p>Written By <%= @wiki_post.author.titleize %></p>
  </div>
  <p class="post-body"><%= @wiki_post.description %></p>
  <div style="display: flex; justify-content: center; gap: 10px; margin-top: 20px;">
    <%= link_to "Edit Post", edit_wiki_post_path(@wiki_post), 
        class: "button button-primary" %>
    
    <%= link_to "Back to Listing", wiki_posts_path, 
        class: "button button-secondary" %>

    <%= button_to "Delete Post", @wiki_post, 
        method: :delete,
        class: "button button-danger",
        data: { turbo_confirm: "Are you sure you want to delete this post?" } %>
  </div>
</div>
