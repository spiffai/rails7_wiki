<%= form_with(model: wiki_post) do |form| %>
  <% if wiki_post.errors.any? %>
    <div style="color: var(--color-danger)">
      <h2><%= pluralize(wiki_post.errors.count, "error") %> prohibited this wiki_post from being saved:</h2>

      <ul>
        <% wiki_post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div style="display: flex; gap: 30px;">
    <!-- Left Column - 1/3 width -->
    <div style="flex: 1;">
      <div style="margin-bottom: 20px;">
        <%= form.label :title, style: "display: block; margin-bottom: 5px; font-weight: 500;" %>
        <%= form.text_field :title, style: "width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;" %>
      </div>

      <div style="margin-bottom: 20px;">
        <%= form.label :author, style: "display: block; margin-bottom: 5px; font-weight: 500;" %>
        <%= form.text_field :author, style: "width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;" %>
      </div>

      <div style="margin-bottom: 20px;">
        <%= form.label :description, style: "display: block; margin-bottom: 5px; font-weight: 500;" %>
        <%= form.text_area :description, style: "width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px; height: 150px;" %>
      </div>

      <div style="display: flex; justify-content: center; margin: 20px 0;">
        <%= form.submit class: "button button-primary" %>
      </div>
    </div>

    <!-- Right Column - 2/3 width -->
    <div style="flex: 2;">
      <div>
        <%= form.text_area :body, class: 'tinymce' %>
        <%= tinymce %>
      </div>
    </div>
  </div>
<% end %>
