<%= render 'shared/logo' %>

<div style="max-width: 800px; margin: 0 auto; padding: 0 20px;">
  
  <p style="color: green"><%= notice %></p>

  <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
    <h1 style="margin: 0;">Quiki Posts</h1>
    <%= link_to "Create Post", new_wiki_post_path, 
        class: "button button-primary" %>
  </div>

  <div id="wiki_posts">
    <table style="width: 100%; border-collapse: collapse; border: 1px solid #ddd; border-radius: 4px;">
      <thead>
        <tr style="background-color: #f8f9fa;">
          <th style="padding: 12px; text-align: left; border-bottom: 2px solid #ddd;">Title</th>
          <th style="padding: 12px; text-align: left; border-bottom: 2px solid #ddd;">Author</th>
          <th style="padding: 12px; text-align: left; border-bottom: 2px solid #ddd;">Created At</th>
          <th style="padding: 12px; text-align: left; border-bottom: 2px solid #ddd;">Updated At</th>
        </tr>
      </thead>
      <tbody>
        <% @wiki_posts.each do |post| %>
          <tr style="border-bottom: 1px solid #ddd;">
            <td style="padding: 12px;">
              <%= link_to post.title, wiki_post_path(post), 
                  style: "color: #124f8c; text-decoration: none;" %>
            </td>
            <td style="padding: 12px; color: #3f8eab;"><%= post.author %></td>
            <td style="padding: 12px; color: #3f8eab;"><%= post.created_at.strftime('%B %d %Y') %></td>
            <td style="padding: 12px; color: #3f8eab;"><%= post.updated_at.strftime('%B %d %Y') %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
